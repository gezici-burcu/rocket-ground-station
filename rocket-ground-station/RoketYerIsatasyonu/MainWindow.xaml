<Window x:Class="RoketYerIstasyonu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:hx="http://helix-toolkit.org/wpf"
        Title="SÜPERNOVA ROKET TAKIMI - YER İSTASYONU"
        Height="800" Width="1400"
        MinHeight="800" MinWidth="1400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Tema (RENKLERİ ELLEMEDİM) -->
        <SolidColorBrush x:Key="Bg" Color="#0B1117"/>
        <SolidColorBrush x:Key="Panel" Color="#101821"/>
        <SolidColorBrush x:Key="Panel2" Color="#0D141C"/>
        <SolidColorBrush x:Key="Stroke" Color="#243040"/>
        <SolidColorBrush x:Key="Text" Color="#EAF0F7"/>
        <SolidColorBrush x:Key="Muted" Color="#9FB0C2"/>

        <SolidColorBrush x:Key="Accent" Color="#19D3C5"/>
        <SolidColorBrush x:Key="Danger" Color="#FF3B30"/>


        <Style TargetType="{x:Type Window}">
            <Setter Property="Background" Value="{StaticResource Bg}"/>
            <Setter Property="Foreground" Value="{StaticResource Text}"/>
        </Style>

        <!-- Siyah yazı sorunu: global -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Text}"/>
        </Style>

        <Style x:Key="PanelBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Panel}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="14"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="{StaticResource Text}"/>
            <Setter Property="Background" Value="{StaticResource Panel}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>

            <!-- Header’ın beyazlaşmasını kes -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8,8,0,0"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header"
                                      RecognizesAccessKey="True"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource Panel2}"/>
                                <Setter Property="Foreground" Value="{StaticResource Accent}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource Panel2}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource Muted}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Background="{StaticResource Bg}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="0,0,0,1">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="SÜPERNOVA ROKET TAKIMI"
                           FontSize="20"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="GÖREV SÜRESİ:  T+ 00:05:30"
                           Foreground="{StaticResource Muted}"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,24,0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="BAĞLANTI:" Foreground="{StaticResource Muted}" FontSize="14"/>
                    <TextBlock Text="  AKTİF" Foreground="{StaticResource Accent}" FontWeight="Bold" FontSize="14"/>
                    <Ellipse Fill="{StaticResource Accent}" Width="10" Height="10" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENT -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SOL PANEL -->
            <StackPanel Grid.Column="0">

                <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="UÇUŞ DURUMU" Foreground="{StaticResource Muted}" FontSize="12"/>
                        <TextBlock Text="{Binding TelemetriVerisi.Durum}" FontSize="16" FontWeight="Bold" Margin="0,6,0,0"/>
                        <TextBlock Text="Simülasyon Telemetrisi" Foreground="{StaticResource Muted}" FontSize="12" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="İRTİFA" Foreground="{StaticResource Muted}" FontSize="12"/>
                        <TextBlock Text="{Binding TelemetriVerisi.Yukseklik, StringFormat={}{0:F0} m}" FontSize="28" FontWeight="Bold" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="DİKEY HIZ" Foreground="{StaticResource Muted}" FontSize="12"/>
                            <TextBlock Text="{Binding TelemetriVerisi.Hiz, StringFormat={}{0:F0} m/s}" FontSize="22" FontWeight="Bold" Margin="0,6,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="SON PAKET" Foreground="{StaticResource Muted}" FontSize="12"/>
                            <TextBlock Text="{Binding SonPaketText}" FontSize="22" FontWeight="Bold" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="BASINÇ" Foreground="{StaticResource Muted}" FontSize="12"/>
                            <TextBlock Text="{Binding TelemetriVerisi.Basinc, StringFormat={}{0:F1} kPa}" FontSize="20" FontWeight="Bold" Margin="0,6,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="SICAKLIK" Foreground="{StaticResource Muted}" FontSize="12"/>
                            <TextBlock Text="{Binding TelemetriVerisi.Sicaklik, StringFormat={}{0:F1} °C}" FontSize="20" FontWeight="Bold" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- KRİTİK TELEMETRİ KUTULARI -->
                <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="KRİTİK TELEMETRİ" Foreground="{StaticResource Muted}" FontSize="12"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Background="{StaticResource Panel2}" CornerRadius="8" Padding="10" Margin="0,0,8,0">
                                <StackPanel>
                                    <TextBlock Text="V_BAT" Foreground="{StaticResource Muted}" FontSize="11"/>
                                    <TextBlock Text="{Binding VBatText}" FontWeight="Bold" FontSize="14" Margin="0,6,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Background="{StaticResource Panel2}" CornerRadius="8" Padding="10" Margin="0,0,8,0">
                                <StackPanel>
                                    <TextBlock Text="GPS" Foreground="{StaticResource Muted}" FontSize="11"/>
                                    <TextBlock Text="{Binding GpsText}" FontWeight="Bold" FontSize="14" Margin="0,6,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" Background="{StaticResource Panel2}" CornerRadius="8" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="RSSI" Foreground="{StaticResource Muted}" FontSize="11"/>
                                    <TextBlock Text="{Binding RssiText}" FontWeight="Bold" FontSize="14" Margin="0,6,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>

            <!-- SAĞ PANEL -->
            <Border Grid.Column="2" Style="{StaticResource PanelBorder}">
                <TabControl Background="{StaticResource Panel}" BorderThickness="0">

                    <!-- 1. DİNAMİK / 3D -->
                    <TabItem Header="1. DİNAMİK / 3D">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="340"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Background="{StaticResource Panel2}">
                                <Canvas IsHitTestVisible="False">
                                    <!-- Hafif grid -->
                                    <Line X1="0" Y1="120" X2="1200" Y2="120" Stroke="{StaticResource Stroke}" StrokeThickness="0.6"/>
                                    <Line X1="0" Y1="240" X2="1200" Y2="240" Stroke="{StaticResource Stroke}" StrokeThickness="0.6"/>
                                    <Line X1="0" Y1="360" X2="1200" Y2="360" Stroke="{StaticResource Stroke}" StrokeThickness="0.6"/>
                                    <Line X1="0" Y1="480" X2="1200" Y2="480" Stroke="{StaticResource Stroke}" StrokeThickness="0.6"/>

                                    <Line X1="200" Y1="0" X2="200" Y2="800" Stroke="{StaticResource Stroke}" StrokeThickness="0.6"/>
                                    <Line X1="400" Y1="0" X2="400" Y2="800" Stroke="{StaticResource Stroke}" StrokeThickness="0.6"/>
                                    <Line X1="600" Y1="0" X2="600" Y2="800" Stroke="{StaticResource Stroke}" StrokeThickness="0.6"/>
                                    <Line X1="800" Y1="0" X2="800" Y2="800" Stroke="{StaticResource Stroke}" StrokeThickness="0.6"/>
                                </Canvas>

                                <hx:HelixViewport3D x:Name="HelixView"
                    Background="Transparent">
                                    <hx:SunLight/>
                                </hx:HelixViewport3D>

                                <!-- Reset View etiketi -->
                                <Border HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,12,12"
                                        Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="1"
                                        CornerRadius="10" Padding="10" Opacity="0.92">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="U" FontWeight="Bold" Foreground="{StaticResource Accent}" Margin="0,0,8,0"/>
                                        <TextBlock Text="Reset View" Foreground="{StaticResource Muted}" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Sağ panel: hizalı Pitch/Roll/Yaw -->
                            <Border Grid.Column="1" Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="1"
                                    CornerRadius="12" Padding="14" Margin="10">
                                <StackPanel>
                                    <TextBlock Text="ORIENTASYON" Foreground="{StaticResource Accent}" FontSize="14" FontWeight="Bold"/>

                                    <Grid Margin="0,14,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Pitch" Foreground="{StaticResource Muted}" FontSize="13"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TelemetriVerisi.Pitch, StringFormat={}{0:F1}°}" FontWeight="Bold" FontSize="15"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Roll" Foreground="{StaticResource Muted}" FontSize="13" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TelemetriVerisi.Roll, StringFormat={}{0:F1}°}" FontWeight="Bold" FontSize="15" Margin="0,8,0,0"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Yaw" Foreground="{StaticResource Muted}" FontSize="13" Margin="0,8,0,0"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TelemetriVerisi.Yaw, StringFormat={}{0:F1}°}" FontWeight="Bold" FontSize="15" Margin="0,8,0,0"/>
                                    </Grid>

                                    <TextBlock Text="* 3D model daha sonra yüklenecek" Foreground="{StaticResource Muted}" FontSize="12" Margin="0,14,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- 2. GRAFİK -->
                    <TabItem Header="2. GRAFİK">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,10">
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="İRTİFA - ZAMAN" Foreground="{StaticResource Muted}" FontSize="12" />
                                        <TextBlock Text="Simülasyon Telemetrisi" Foreground="{StaticResource Muted}" FontSize="11" Margin="0,3,0,0"/>
                                    </StackPanel>

                                    <lvc:CartesianChart Margin="0,40,0,0"
                                                       Series="{Binding IrtifaSerisi}"
                                                       LegendLocation="None">
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis Title="Zaman (s)" Foreground="{StaticResource Muted}" FontSize="11">
                                                <lvc:Axis.Separator>
                                                    <lvc:Separator Stroke="{StaticResource Stroke}" StrokeThickness="0.5"/>
                                                </lvc:Axis.Separator>
                                            </lvc:Axis>
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis Title="İrtifa (m)" Foreground="{StaticResource Muted}" FontSize="11">
                                                <lvc:Axis.Separator>
                                                    <lvc:Separator Stroke="{StaticResource Stroke}" StrokeThickness="0.5"/>
                                                </lvc:Axis.Separator>
                                            </lvc:Axis>
                                        </lvc:CartesianChart.AxisY>
                                    </lvc:CartesianChart>
                                </Grid>
                            </Border>

                            <Grid Grid.Row="1" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource PanelBorder}">
                                    <Grid>
                                        <StackPanel>
                                            <TextBlock Text="BASINÇ" Foreground="{StaticResource Muted}" FontSize="12" />
                                            <TextBlock Text="Simülasyon Telemetrisi" Foreground="{StaticResource Muted}" FontSize="11" Margin="0,3,0,0"/>
                                        </StackPanel>

                                        <lvc:CartesianChart Margin="0,40,0,0"
                                                           Series="{Binding BasincSerisi}"
                                                           LegendLocation="None">
                                            <lvc:CartesianChart.AxisY>
                                                <lvc:Axis Title="Basınç (kPa)" Foreground="{StaticResource Muted}" FontSize="11">
                                                    <lvc:Axis.Separator>
                                                        <lvc:Separator Stroke="{StaticResource Stroke}" StrokeThickness="0.5"/>
                                                    </lvc:Axis.Separator>
                                                </lvc:Axis>
                                            </lvc:CartesianChart.AxisY>
                                            <lvc:CartesianChart.AxisX>
                                                <lvc:Axis Title="Zaman (s)" Foreground="{StaticResource Muted}" FontSize="11">
                                                    <lvc:Axis.Separator>
                                                        <lvc:Separator Stroke="{StaticResource Stroke}" StrokeThickness="0.5"/>
                                                    </lvc:Axis.Separator>
                                                </lvc:Axis>
                                            </lvc:CartesianChart.AxisX>
                                        </lvc:CartesianChart>
                                    </Grid>
                                </Border>

                                <Border Grid.Column="2" Style="{StaticResource PanelBorder}">
                                    <Grid>
                                        <StackPanel>
                                            <TextBlock Text="SICAKLIK" Foreground="{StaticResource Muted}" FontSize="12" />
                                            <TextBlock Text="Simülasyon Telemetrisi" Foreground="{StaticResource Muted}" FontSize="11" Margin="0,3,0,0"/>
                                        </StackPanel>

                                        <lvc:CartesianChart Margin="0,40,0,0"
                                                           Series="{Binding SicaklikSerisi}"
                                                           LegendLocation="None">
                                            <lvc:CartesianChart.AxisY>
                                                <lvc:Axis Title="Sıcaklık (°C)" Foreground="{StaticResource Muted}" FontSize="11">
                                                    <lvc:Axis.Separator>
                                                        <lvc:Separator Stroke="{StaticResource Stroke}" StrokeThickness="0.5"/>
                                                    </lvc:Axis.Separator>
                                                </lvc:Axis>
                                            </lvc:CartesianChart.AxisY>
                                            <lvc:CartesianChart.AxisX>
                                                <lvc:Axis Title="Zaman (s)" Foreground="{StaticResource Muted}" FontSize="11">
                                                    <lvc:Axis.Separator>
                                                        <lvc:Separator Stroke="{StaticResource Stroke}" StrokeThickness="0.5"/>
                                                    </lvc:Axis.Separator>
                                                </lvc:Axis>
                                            </lvc:CartesianChart.AxisX>
                                        </lvc:CartesianChart>
                                    </Grid>
                                </Border>
                            </Grid>

                            <TextBlock Grid.Row="2"
                                       Text="* Dummy data ile arayüzün potansiyeli gösterimi (apogee / U-shape / dalgalı)."
                                       Foreground="{StaticResource Muted}"
                                       FontSize="12"/>
                        </Grid>
                    </TabItem>

                    <!-- 3. HARİTA -->
                    <TabItem Header="3. HARİTA">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="340"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource PanelBorder}">
                                <Grid>
                                    <TextBlock Text="CANLI UYDU HARİTASI (TEMSİLİ)" Foreground="{StaticResource Muted}" FontSize="12"/>

                                    <Canvas Margin="0,24,0,0" Background="{StaticResource Panel2}">
                                        <!-- Harita çerçeve -->
                                        <Rectangle Width="900" Height="520" Stroke="{StaticResource Stroke}" StrokeThickness="1"/>

                                        <!-- Rampa noktası -->
                                        <Ellipse Canvas.Left="170" Canvas.Top="300" Width="12" Height="12" Fill="{StaticResource Muted}"/>
                                        <TextBlock Canvas.Left="190" Canvas.Top="296" Text="Rampa" Foreground="{StaticResource Muted}"/>

                                        <!-- Uçuş rotası (Polyline) -->
                                        <Polyline Stroke="{StaticResource Accent}" StrokeThickness="2"
                                                  Points="176,306 210,292 260,270 320,250 380,238 440,232 500,235 560,248 620,270 680,298 740,332"/>

                                        <!-- Roket işareti (rota sonu) -->
                                        <Ellipse Canvas.Left="736" Canvas.Top="328" Width="14" Height="14" Fill="{StaticResource Accent}"/>
                                        <TextBlock Canvas.Left="756" Canvas.Top="324" Text="Roket" Foreground="{StaticResource Text}"/>

                                        <!-- Kuzey oku -->
                                        <TextBlock Canvas.Left="20" Canvas.Top="20" Text="(N) Kuzey" Foreground="{StaticResource Muted}"/>
                                        <Line X1="60" Y1="45" X2="60" Y2="90" Stroke="{StaticResource Accent}" StrokeThickness="2"/>
                                        <Polygon Points="60,35 52,50 68,50" Fill="{StaticResource Accent}"/>
                                    </Canvas>

                                    <TextBlock Text="Son GPS Paketi: 2 sn önce alındı."
                                               Foreground="{StaticResource Muted}"
                                               Margin="10,0,0,10"
                                               VerticalAlignment="Bottom"/>
                                </Grid>
                            </Border>

                            <Border Grid.Column="2" Style="{StaticResource PanelBorder}">
                                <StackPanel>
                                    <TextBlock Text="KONUM BİLGİSİ" Foreground="{StaticResource Accent}" FontSize="14" FontWeight="Bold"/>

                                    <Grid Margin="0,12,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ENLEM:" Foreground="{StaticResource Muted}"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="38.423741 N" FontWeight="Bold"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="BOYLAM:" Foreground="{StaticResource Muted}" Margin="0,6,0,0"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="27.142826 E" FontWeight="Bold" Margin="0,6,0,0"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="MESAFE:" Foreground="{StaticResource Muted}" Margin="0,6,0,0"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="1,450 metre" FontWeight="Bold" Margin="0,6,0,0"/>
                                    </Grid>

                                    <Border Background="{StaticResource Panel2}" CornerRadius="10" Padding="12" Margin="0,16,0,0">
                                        <StackPanel>
                                            <TextBlock Text="ANTEN YÖNÜ" Foreground="{StaticResource Muted}" FontSize="12"/>
                                            <TextBlock Text="Azimut: 30°" FontWeight="Bold" Margin="0,6,0,0"/>
                                            <TextBlock Text="Elevation: 15°" FontWeight="Bold" Margin="0,4,0,0"/>
                                            <TextBlock Text="W ↔ E" Foreground="{StaticResource Muted}" Margin="0,10,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- 4. KONSOL -->
                    <TabItem Header="4. KONSOL">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Style="{StaticResource PanelBorder}">
                                <Grid>
                                    <TextBlock Text="TEST &amp; DEBUG KONSOLU" Foreground="{StaticResource Muted}" FontSize="12"/>
                                    <ScrollViewer Margin="0,24,0,0" VerticalScrollBarVisibility="Auto">
                                        <TextBlock FontFamily="Consolas" FontSize="12" TextWrapping="NoWrap">
[14:00:01] SYS: Başlatılıyor... BMI088 OK. BMP390 OK.
[14:00:02] GPS: Uydu aranıyor (0/12)...
[14:00:05] LORA: Handshake başarılı. Sinyal: -72dBm
[14:00:06] DATA: Alt:1500m Speed:120m/s Press:84kPa Temp:19C State:ASCENT
[14:00:07] DATA: Alt:1512m Speed:118m/s Press:84kPa Temp:19C State:ASCENT
[14:00:08] DATA: Alt:1520m Speed:121m/s Press:84kPa Temp:19C State:ASCENT
&gt; (İmleç yanıp sönüyor)
                                        </TextBlock>
                                    </ScrollViewer>
                                </Grid>
                            </Border>

                            <Border Grid.Row="1" Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="1"
                                    CornerRadius="12" Padding="14" Margin="0,10,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0" Content="SIFIRLA (Cal)" Margin="0,0,10,0"/>
                                    <Button Grid.Column="1" Content="Kamerayı Aç/Kapat" Margin="0,0,10,0"/>
                                    <Button Grid.Column="2" Content="SD Kartı Formatla" Margin="0,0,10,0"/>
                                    <Button Grid.Column="3" Content="Log Dışa Aktar"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="{StaticResource Panel}" BorderBrush="{StaticResource Stroke}" BorderThickness="0,1,0,0">
            <Grid Margin="16,0">
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                    <!-- ARMED/DISARMED -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,18,0">
                        <Ellipse Fill="{StaticResource Accent}" Width="10" Height="10" Margin="0,0,8,0"/>
                        <TextBlock Text="🟢 ARMED" Foreground="{StaticResource Accent}" FontSize="14" FontWeight="Bold" Margin="0,0,10,0"/>
